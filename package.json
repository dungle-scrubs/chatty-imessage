{
  "name": "chatty-imessage",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "chatty": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "chatty": "bun run src/index.ts",
    "test": "bun test",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "typecheck": "tsc --noEmit",
    "build": "bun build --compile --minify src/index.ts --outfile dist/chatty",
    "install:local": "bun run build && ./scripts/install.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "husky": "^9.1.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0"
  }
}
